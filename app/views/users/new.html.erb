<div class="container">
<h1>Create a New User</h1>
<%=form_for @user do |f| %>
<%= f.text_field :email, :placeholder => "Username", class: "form-control" %><br>
<%= f.password_field :password, :placeholder =>"Password", class: "form-control" %><br>
<%= f.submit "Create New User", class: "btn btn-success" %>
<% end %>
</div>